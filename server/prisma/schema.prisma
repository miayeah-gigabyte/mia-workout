// server/prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

// Ensure the provider is postgresql and the URL uses the env() function.
datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// User (Mia and Partner)
model User {
  // Use @db.Uuid to map the Prisma String to the native PostgreSQL UUID type.
  id            String         @id @default(uuid()) @db.Uuid
  email         String         @unique
  name          String         @default("Mia")
  partnerEmail  String?        // For Karol's email
  
  sessions      Session[]
  unlocks       RewardUnlock[]
  
  createdAt     DateTime       @default(now())
  
  @@map("User")
}

// Workout Sessions (The Activity Log)
model Session {
  id              String   @id @default(uuid()) @db.Uuid
  userId          String
  user            User     @relation(fields: [userId], references: [id])
  
  date            DateTime @default(now())
  minutes         Int      @default(30) // Default to 30 min as required
  notes           String?
  // Use Float, which maps to PostgreSQL's DOUBLE PRECISION, suitable for points.
  pointsValue     Float    @default(0) 
  
  createdAt       DateTime @default(now())
  @@map("Session")
}

// Rewards (Tracks when a reward is successfully unlocked)
model RewardUnlock {
  id            String     @id @default(uuid()) @db.Uuid
  userId        String
  user          User       @relation(fields: [userId], references: [id])
  
  rewardName    String     
  unlockedAt    DateTime   @default(now())
  
  @@map("RewardUnlock")
}
